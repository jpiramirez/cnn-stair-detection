FROM tensorflow/tensorflow:latest-gpu-py3

COPY DatasetSmall/train/ DatasetSmall/train/
COPY DatasetSmall/validation/ DatasetSmall/validation/

COPY Models.py Models.py
COPY TrainingModel.py TrainingModel.py

RUN python3 -m pip install matplotlib
RUN python3 -m pip install pillow

# Execute the program
CMD python3 TrainingModel.py --dataset DatasetSmall --odir myoutput --epochs 10 --period 2 --batchtra 10 --batchval 20 > myoutput/mobilenet_report.txt
